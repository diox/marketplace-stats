// styles for the global site header only.
@import 'lib';

$header-border = 1px dotted $cloud-gray;

.site-header {
    background-color: #fff;
    display: flex;

    .site {
        margin: 0;
        width: 232px;

        a {
            display: block;
            height: 60px;
            hidetext();
            width: 100%;
        }
    }
    .wordmark {
        background: url(../img/pretty/marketplace_logo.png) -5px 50% no-repeat;
        background-size: auto 46px;
        display: block;
        height: 47px;
        max-width: 232px;
        width: 232px;
    }
    .site, .site a, .wordmark {
        height: 60px;
    }
    .header-button {
        display: none;
    }
    .persona {
        display: block;
    }
    > nav {
        display: flex;
        margin: 0 auto;
        width: 1024px;

        > a {
            align-self: center;
        }
    }
    .flex-shift {
        flex: 1 1 0;
    }
}

header .email {
    color: $london-fog-gray;

    +ltr() {
        border-right: $header-border;
        margin-right: 15px;
        padding-right: 15px;
    }
    +rtl() {
        border-left: $header-border;
        margin-left: 15px;
        padding-left: 15px;
    }
}

.header, .secondary-header {
    border-bottom: 1px solid $cloud-gray;
}

.close {
    background: url(../img/pretty/close.svg) 50% no-repeat;
    background-size: 18px auto;
    height: 34px;
    hidetext();
    position: absolute;
    right: 0;
    top: 0;
    width: 40px;
}

// Buttons that appear in headers.
.header-button {
    display: block;
    height: 60px;
    line-height: 60px;
    text-align: center;
    width: 48px;

    &.back {
        hidetext();
        background: url(../img/pretty/back_arrow.svg) center no-repeat;
        background-size: 12px 24px;
        margin-right: 2px;
        position: relative;
        width: 50px;

        &:after {
            background-repeat: no-repeat;
            content: "";
            display: block;
        }
        &:hover {
            background-image: url(../img/pretty/back_arrow_active.svg);
        }
    }
    // 'Sign In'
    &.persona {
        display: none;
        margin-left: 15px;
        word-break: keep-all;
        word-wrap: normal;
        &.loading-submit {
            hidetext();
            outline: 0;
            width: 50px;
            &:after {
                display: none;
            }
        }
    }
}

// When we're holding down on the debug page, don't allow clicking on the logo
// because that would take us back home.
[data-page-type~=debug] .header .wordmark {
    pointer-events: none;
}

[data-page-type~=search],
[data-page-type~=leaf] {
    .back, .expand, .flex-span {
        display: block;
    }
    .site, .flex-shift {
        display: none;
    }
    .flex-span {
        flex(1);
    }
}

main {
    padding: 48px 0;
}

.logged-in .site-header .persona {
    display: none;
}

// How does the header look for the various page "types"?
[data-page-type~=search],
[data-page-type~=leaf] {
    .back, .site {
        display: block;
    }
    .back, .site-header .expand-toggle,
    .flex-span {
        display: none;
    }
    .flex-shift {
        display: block;
    }
}

.nav-overlay.show {
    background: transparent;
}

.rocketfuel-disabled .site-header {
    height: 120px;
    max-height: 120px;
}

.site-header > warn {
    border: 2px dotted $angry-cvan-red;
    border-radius: 5px;
    height: 48px;
    line-height: 44px;  // 60px minus the border widths;
    padding: 0 20px;
}

.project {
    align-self: center;
    color: #E66000;
    font-size: 18px;
    font-weight: 300;
    letter-spacing: -0.5px;
    line-height: 30px;

    +ltr() {
        border-left: $header-border;
        padding: 3px 0 0 12px;
    }
    +rtl() {
        border-right: $header-border;
        margin-right: 15px;
        padding: 3px 12px 0 0;
    }
}

.project:hover {
    text-decoration: none;
}
